{
    "version": 2,
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "frontend/build",
    "installCommand": "npm install",
    "builds": [
        {
            "src": "api/index.js",
            "use": "@vercel/node",
            "config": {
                "maxLambdaSize": "50mb"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/v1/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}